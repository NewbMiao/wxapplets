page {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  overflow-x: hidden;
}

.flex {
  display: flex;
  justify-content: center;
  align-items: center;
}


.cropper-wrapper {
  position: relative;
  flex-direction: row;
  justify-content: space-between;
  height: 100%;
  background-color: #e5e5e5;
}

.cropper-buttons {
  flex-direction: row;
  justify-content: space-between;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50px;
  line-height: 50px;
}

.cropper-buttons .upload {
  width: 50%;
  text-align: center;
}

.cropper-buttons .getCropperImage {
  width: 50%;
  text-align: center;
}

.cropper {
  position: absolute;
  top: 0;
  left: 0;
}

.cropper-buttons {
  background-color: rgba(0, 0, 0, 0.95);
}

.canvas-hidden {
  position: absolute;
  bottom: 0;
  left: -9999rpx;
}