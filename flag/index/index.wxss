.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  height: 100vh;
}

.avatar-area {
  width: 400rpx;
  height: 400rpx;
  margin: 4rem auto 0rem;
  border-radius: 15px;
  background-color: #eee;
  align-items: center;
  justify-content: center;
  display: flex;
  position: relative;
}

.avatar-area image {
  width: 400rpx;
  height: 400rpx;
  border-radius: 15px;
}

.clearAvatar {
  position: absolute;
  right: -8px;
  top: -8px;
}

.btnLink {
  font-size: 14px;
  text-decoration: underline;
  margin: 1rem auto;
  padding: 0px;
  outline: none;
  color: blue;
  border: none;
  outline: none;
  background-color: transparent;
}

.flag-area {
  width: 100%;
  height: 200rpx;
  white-space: nowrap;
}

.flag-item {
  width: 180rpx;
  height: 180rpx;
  margin: auto 20rpx;
  border-radius: 15px;
  box-shadow: 0px 15px 10px -15px #000;
}

.btnSave {
  margin: 80rpx auto 40rpx;
  background: #3498db;
  border-radius: 3px;
  height: 120rpx;
  align-content: center;
  justify-content: center;
  align-items: center;
  display: flex;
  color: white;
}

.canvas-hidden {
  position: absolute;
  bottom: 0;
  left: -9999rpx;
  width: 640px;
  height: 640px;
}